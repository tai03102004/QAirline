    .search-container
      form(action='/search-flights' method='GET')
        .trip-options
          label
            input(type='radio', name='trip')
            |  One way
          label
            input(type='radio', name='trip', checked='')
            |  Round-trip
          label
            input(type='radio', name='trip')
            |  Multi-City
        .form
          .inputs
            .dropdown.depart-dropdown
              label depart
              input.dropdown-input(type='text', placeholder='Tìm kiếm điểm đến...', name='departureLocation')
              .dropdown-content
                .region
                  h3 VI&#x1EC6;T NAM
                  ul
                    li Hanoi
                    li Ho Chi Minh
                    li Da Nang
                    li Nha Trang
            .dropdown.arrive-dropdown
              label arrive
              input.dropdown-input(type='text', placeholder='Tìm kiếm điểm đến...', name='arrivalLocation')
              .dropdown-content
                .region
                  h3 VI&#x1EC6;T NAM
                  ul
                    li Hanoi
                    li Ho Chi Minh
                    li Da Nang
                    li Nha Trang
            .input-group
              label Departing
              input(type='date')
            .input-group
              label Returning
              input(type='date')
          .passenger-container
            h2 Passenger
            .passenger-type
              .passenger-row
                .details
                  p Adult
                  span Above 12 years.
                .counter
                  button.btn-decrement(type='button') -
                  span.count 0
                  button.btn-increment(type='button') +
              .passenger-row
                .details
                  p Child
                  span 2-11 years on travel date.
                .counter
                  button.btn-decrement(type='button') -
                  span.count 0
                  button.btn-increment(type='button') +
              .passenger-row
                .details
                  p Infant
                  span Below 2 years.
                .counter
                  button.btn-decrement(type='button') -
                  span.count 0
                  button.btn-increment(type='button') +
            p.note
              | Please note: You can book for a maximum of nine passengers.
          .promo
            h2 Travel Class
            p.note Optional
            .travel-class
              button.class-button(type='button') Economy
              button.class-button(type='button') Business
              button.class-button(type='button') First Class
              button.class-button(type='button')
                | Premium Economy
            br
            div
              input(type='text', placeholder='Enter Promo Code')
            br
            input.submit-button.search-button(type='submit', value='Show Flight')
    script(type='module' src='/client/js/flightsearch.js')