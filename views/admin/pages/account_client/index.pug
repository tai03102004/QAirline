extends ../../layouts/defaultNotRight.pug

block main
  h1(class="my-4") Danh sách tài khoản

  .card.mb-3
    .card-header Danh sách
    .card-body
      table(
        class="table table-hover table-sm"
      )
        thead
          tr
            th STT
            th Avatar
            th Họ tên
            th Email
            th Trạng thái
            th Hành động

        tbody
          each item, index in records
            tr 
              td #{index+1}
              td
                img(
                  src=item.avatar
                  alt=item.name
                  width="100px"
                  height="auto"
                )
              td #{item.name}
              //- td #{item.role.title}
              td #{item.email}
              td
                if (item.status === "active")
                  a(
                    href="javascript:;"
                    class="badge badge-success"
                    data-status="active"
                  ) Hoạt động
                else
                  a(
                    href="javascript:;"
                    class="badge badge-danger"
                    data-status="inactive"
                  ) Dừng hoạt động
              td
                button(
                  class="btn btn-danger btn-sm ml-1"
                ) Xóa