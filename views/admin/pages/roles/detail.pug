extends ../../layouts/defaultNotRight.pug

block main
  h1(class="my-4") Chi tiết nhóm quyền

  form(
    action=`/${prefixAdmin}/roles/detail`
    method="POST"
  )
  style.
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 20px;
    }
    th, td {
      padding: 10px;
      border: 1px solid #ccc;
      text-align: left;
    }
    th {
      background-color: #f0f0f0;
    }

  table
    tr
      th Tiêu đề 
      th Mô tả
    tr
      td #{records.title}
      td #{records.description}
  div(data-records=records)
  table(
    class="table table-hover table-sm"
    table-permissions
  )
    tbody
      tr(data-name="id" class="d-none")
          td
            td(class="text-center")
              input(type="text" value=records.id)
      //- Danh mục sản phẩm
      tr
        td(colspan="4")
          b Danh mục sản phẩm
      tr(data-name="products-category_view")
        td Xem
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="products-category_create")
        td Thêm mới
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="products-category_edit")
        td Chỉnh sửa
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="products-category_delete")
        td Xóa
          td(class="text-center")
            input(type="checkbox")
        //- Sản phẩm
      tr
        td(colspan="4")
          b Sản phẩm
      tr(data-name="products_view")
        td Xem
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="products_create")
        td Thêm mới
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="products_edit")
        td Chỉnh sửa
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="products_delete")
        td Xóa
          td(class="text-center")
            input(type="checkbox")
            //- Nhóm quyền
      tr
        td(colspan="4")
          b Nhóm quyền
      tr(data-name="roles_view")
        td Xem
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="roles_create")
        td Thêm mới
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="roles_edit")
        td Chỉnh sửa
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="roles_delete")
        td Xóa
          td(class="text-center")
            input(type="checkbox")
        //- Tài khoản
      tr
        td(colspan="4")
          b Tài khoản
      tr(data-name="accounts_view")
        td Xem
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="accounts_create")
        td Thêm mới
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="accounts_edit")
        td Chỉnh sửa
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="accounts_delete")
        td Xóa
          td(class="text-center")
            input(type="checkbox")
          //- Phân quyền
      tr
        td(colspan="4")
          b Phân quyền
      tr(data-name="permission_view")
        td Xem
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="permission_create")
        td Thêm mới
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="permission_edit")
        td Chỉnh sửa
          td(class="text-center")
            input(type="checkbox")
      tr(data-name="permission_delete")
        td Xóa
          td(class="text-center")
            input(type="checkbox")
  form(
    id="form-change-permissions"
    method="POST"
    action=`/${prefixAdmin}/roles/permissions?_method=PATCH`
    class="d-none"
  )
    div(class="form-group")
      input(
        type="text"
        class="form-control"
        name="permissions"
      )

  script(src="/admin/script/roleDetail.js") 

    